/**index.wxss**/

page {
  background-color: #E6E6E6;
  margin-top: 30px;
}
.container{
  margin-bottom: 30px;
}

.swiper {
  height: 100%;
  width: 100%;
  border-radius: 5px;
  overflow: hidden;
 }
 .swiper image {
  height: 100%;
  width: 100%;
 }

.imgBody{
  margin-top: 5px;
  margin-left: 35px;
  margin-right: 35px;
  height:500px;
  border-radius: 10px;
  border: 5px solid rgba(0, 0, 0, 1);
  box-shadow: 0px 2px 5px rgba(0, 0, 0, .5);
}
.summaryText{
  margin-top: 32px;
  text-align: center;
  font-size: 15px;
}

.mainBtn{
  margin-top: 10px;
  margin-left: 35px;
  margin-right: 35px;
  height: 62px;
  background: rgba(0, 0, 0, 1);
  border-radius: 10px;
  color: #FFFFFF;
  font-size: 21px;
  font-weight: 700;
  line-height:62px;
}

.mainBtn-hover{
  background-color: blueviolet;
  border: 5px solid rgba(0, 0, 0, 1);
}

.viewAllBtn{
  margin-top: 10px;
  margin-left: 35px;
  margin-right: 35px;
  height: 62px;
  background: #FFFFFF;
  border-radius: 10px;
  font-size: 21px;
  font-weight: 700;
  line-height:62px;
}

.viewAllBtn-hover{
  background-color: #F5F5F5;
}

@import 'index-wxa-auto-dark.wxss'